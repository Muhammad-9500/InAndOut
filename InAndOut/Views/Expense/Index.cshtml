@model IEnumerable<InAndOut.Models.Expense>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary w-50">Create New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Expense Amount</th>
                    <th>Expense Type</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @{var total = 0.0;}
                @foreach (var expense in Model)
                {
                    total += @expense.Amount;
                    <tr>
                        <td width="25%">@expense.ExpenseName</td>
                        <td width="25%">$@expense.Amount</td>
                        <td width="25%">@expense.ExpenseType.Name</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-route-Id="@expense.Id" asp-action="Update" class="btn btn-primary mx-2">
                                    @* <i class="fas fa-edit"></i> *@Edit
                                </a>
                                <a asp-route-Id="@expense.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    @* //<i class="far fa-trash-alt"></i> *@Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                
            <tr>
                    <td>Total:</td>
                    <td width="30%"> $@total</td>
            </tr>
            </tbody>

        </table>
    }
    else
    {
        <p>No Expenses Created Yet</p>
    }

</div>


