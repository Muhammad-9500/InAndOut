@model IEnumerable<InAndOut.Models.ExpenseType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Types</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary w-50">Create New Expense Type</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                
                @foreach (var expenseType in Model)
                {
                    <tr>
                        <td width="35%">@expenseType.Name</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-route-Id="@expenseType.Id" asp-action="Update" class="btn btn-primary mx-2">
                                    @* <i class="fas fa-edit"></i> *@Edit
                                </a>
                                <a asp-route-Id="@expenseType.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    @* //<i class="far fa-trash-alt"></i> *@Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Expense Type Created Yet</p>
    }

</div>


