@model IEnumerable<InAndOut.Models.Item>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary w-50">Create New Item</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.Lender</td>
                        <td width="30%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.Id" asp-action=""  class="btn btn-primary mx-2">
                                    @* <i class="fas fa-edit"></i> *@Edit
                                </a>
                                <a asp-route-Id="@item.Id" asp-action="" class="btn btn-danger mx-2">
                                    @* //<i class="far fa-trash-alt"></i> *@Delete
                                </a>
                            </div>
                            
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Items Created Yet</p>
    }

</div>


